# AbaQuiz Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Bot will not start without these
# =============================================================================

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# OpenAI API Key (get from platform.openai.com)
# Used for question generation, file search, and embeddings
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL - Defaults will be used if not specified
# =============================================================================

# Database path (default: ./data/abaquiz.db)
DATABASE_PATH=./data/abaquiz.db

# Default timezone for users (default: America/Los_Angeles)
DEFAULT_TIMEZONE=America/Los_Angeles

# Quiz schedule hours in 24-hour format (default: 8 and 20)
MORNING_QUIZ_HOUR=8
EVENING_QUIZ_HOUR=20

# Daily extra question limit (default: 5)
DAILY_EXTRA_QUESTION_LIMIT=5

# Log level (default: INFO)
LOG_LEVEL=INFO
